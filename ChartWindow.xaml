<Window x:Class="GiamSatNhaMay.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Biểu đồ sản xuất" Height="1080" Width="1920"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        Background="White"
        Icon="/Image/Icon_Logo_CNVGroup.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOP FILTER ROW -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Loại máy:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="cbTypeFilter" Width="220" SelectionChanged="CbTypeFilter_SelectionChanged"/>

            <TextBlock Text="Từ:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <DatePicker x:Name="dpStartDate" Width="130" Margin="6,0,0,0"/>
            <TextBox x:Name="tbStartTime" Width="60" Text="00:00" Margin="5,0,0,0" VerticalContentAlignment="Center"/>

            <TextBlock Text="Đến:" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <DatePicker x:Name="dpEndDate" Width="130" Margin="6,0,0,0"/>
            <TextBox x:Name="tbEndTime" Width="60" Text="23:59" Margin="5,0,0,0" VerticalContentAlignment="Center"/>

            <Button x:Name="btnRun" Content="Thống kê" Width="100" Margin="20,0,0,0" Click="BtnRun_Click"/>
            <Button x:Name="btnClear" Content="Bỏ chọn" Width="100" Margin="8,0,0,0" Click="BtnClearSelection_Click"/>
            <TextBlock x:Name="txtStatus" Foreground="Blue" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- MAIN: LEFT selection panel + RIGHT chart container -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: machine list -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Padding="8" CornerRadius="6" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Chọn máy:" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="icMachines">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              Tag="{Binding Id}"
                                              Margin="2"
                                              Checked="MachineCheckChanged"
                                              Unchecked="MachineCheckChanged"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- RIGHT: wrap chart -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ChartPanel" Orientation="Horizontal" ItemWidth="600" ItemHeight="350"/>
            </ScrollViewer>
        </Grid>
        
        <!-- BOTTOM: total -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <TextBlock x:Name="txtTotalRun" FontWeight="Bold" Margin="10,0"/>
            <TextBlock x:Name="txtTotalStop" FontWeight="Bold" Margin="10,0"/>
            <TextBlock x:Name="txtTotalError" FontWeight="Bold" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
