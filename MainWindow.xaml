<Window x:Class="GiamSatNhaMay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiamSatNhaMay"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="White" Foreground="White"
        Icon= "/Image/Icon_Logo_CNVGroup.ico"
        Closing="Window_Closing">
    <Grid Margin="50,10,50,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="100.326"/>
            <RowDefinition Height="Auto" MinHeight="14"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Logo -->
        <Image Source="/Image/Logo_CNVGroup1.png" 
                       Width="196"
                       Stretch="Uniform"
                       HorizontalAlignment="Center" Margin="0,0,0,2"/>
        <!-- Title -->
        <TextBlock Text="PHẦN MỀM GIÁM SÁT NHÀ MÁY SẢN XUẤT" 
                   Foreground="#2F2F3A" 
                   FontSize="16" FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0,92,0,0"/>  
        <!-- Form -->
        <StackPanel Grid.Row="2" VerticalAlignment="Top" Height="188" Margin="0,1,0,0">
            <!-- Username -->
            <TextBlock Text="Tên đăng nhập" Foreground="Black" FontSize="14" 
                         FontWeight="SemiBold" Margin="5,0,0,3"/>
            <Grid Margin="0,0,0,15">
                <Border Background="#FFC3C0C0" CornerRadius="5">
                    <TextBox x:Name="txtUsername"
                             Background="Transparent"
                             Foreground="Black"
                             BorderThickness="0"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Padding="10,0,0,0"
                             FontSize="14" SelectionTextBrush="#FF0C0C0C"/>
                </Border>
                <TextBlock Text="Username" Foreground="#888"
                           Margin="15,0,0,0" VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           x:Name="placeholderUsername"/>
            </Grid>

            <!-- Password -->
            <TextBlock Text="Mật khẩu" Foreground="Black" FontSize="14" 
                       FontWeight="SemiBold" Margin="5,0,0,3"/>
            <Grid Margin="0,0,0,25">
                <Border Background="#FFC2C2C5" CornerRadius="5">
                    <PasswordBox x:Name="txtPassword"
                                 Background="Transparent"
                                 Foreground="Black"
                                 BorderThickness="0"
                                 Height="35"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0,0,0"
                                 FontSize="14"/>
                </Border>
                <TextBlock Text="Password" Foreground="#888"
                           Margin="15,0,0,0" VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           x:Name="placeholderPassword"/>
            </Grid>

            <!-- Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="280">
                <Button Content="Đăng nhập" Width="120" Height="35"
                        Margin="10,0,10,0" Background="#FF1BB760" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="BtnLogin_Click"/>    
                <Button Content="Thoát" Width="120" Height="35"
                        Margin="10,0,10,0" Background="#FFCC4242" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="BtnExit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
