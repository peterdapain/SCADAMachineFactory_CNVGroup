<Window x:Class="GiamSatNhaMay.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Thông tin hoạt động máy"
        Height="520" Width="880"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="White"
        Icon="/Image/Icon_Logo_CNVGroup.ico">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Thông tin + ColumnChart -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Thời gian hoạt động"
                       FontWeight="Bold"
                       FontSize="20"
                       Margin="0,0,0,15"
                       TextAlignment="Center"
                       Foreground="Black"/>

            <TextBlock x:Name="PopupStatus"
                       FontSize="16"
                       Foreground="Black"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="PopupPower"
                       FontSize="16"
                       Foreground="Black"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="PopupError"
                       FontSize="16"
                       Foreground="Black"
                       Margin="0,0,0,15"/>

            <lvc:CartesianChart x:Name="ColumnChartInfo"
                                Height="240"
                                Foreground="Black"
                                LegendLocation="Right">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Trạng thái" Labels="RUN,STOP,ERROR" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Thời gian"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <Button Content="Đóng"
                    Width="90" Height="32"
                    Click="Close_Click"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Biểu đồ tròn -->
        <StackPanel Grid.Column="1" Margin="10">
            <lvc:PieChart x:Name="PieChartRunStop"
                          Height="360"
                          LegendLocation="Right"
                          Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
